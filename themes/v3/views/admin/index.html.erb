<% @title = t('views.admin.index.title') %>
<div class="section top">
  
  <h2><%= @title %></h2>

    <dl class="action-menu">
      
      <%- if current_user.may_administer_contributions? -%>
        <dt><%= link_to t('views.admin.index.links.contributions.text'), admin_contributions_path %></dt>
        <dd><%= t('views.admin.index.links.contributions.description') %></dd>
      <%- end -%>
      <%- if current_user.may_administer_metadata_fields? -%>
        <dt><%= link_to t('views.admin.index.links.metadata_fields.text'), admin_metadata_fields_path %></dt>
        <dd><%= t('views.admin.index.links.metadata_fields.description') %></dd>
      <%- end -%>
      <%- if current_user.may_administer_metadata_fields? && sphinx_running? && !ThinkingSphinx.remote_sphinx? -%>
        <dt><%= link_to t('views.admin.index.links.reindex.text'), reindex_admin_metadata_fields_path %></dt>
        <dd><%= t('views.admin.index.links.reindex.description') %></dd>
      <%- end -%>
      <%- if current_user.may_administer_users? -%>
        <dt><%= link_to t('views.admin.index.links.users.text'), admin_users_path %></dt>
        <dd><%= t('views.admin.index.links.users.description') %></dd>
      <%- end -%>
      <%- if current_user.may_administer_settings? -%>
        <dt><%= link_to t('views.admin.index.links.config.text'), admin_config_path %></dt>
        <dd><%= t('views.admin.index.links.config.description') %></dd>
      <%- end -%>
      <%- if current_user.may_view_logs? -%>
        <dt><%= link_to t('views.admin.index.links.logs.text'), admin_logs_path %></dt>
        <dd><%= t('views.admin.index.links.logs.description') %></dd>
      <%- end -%>
      <%- if current_user.may_administer_contributions? -%>
        <dt><%= link_to t('views.admin.index.links.export.text'), export_admin_contributions_path %></dt>
        <dd><%= t('views.admin.index.links.export.description') %></dd>
      <%- end -%>
      <%- if current_user.may_administer_users? -%>
        <dt><%= link_to t('views.admin.index.links.export_users.text'), export_admin_users_path(:format => 'csv') %></dt>
        <dd><%= t('views.admin.index.links.export_users.description') %></dd>
      <%- end -%>
      
    </dl>

</div>
