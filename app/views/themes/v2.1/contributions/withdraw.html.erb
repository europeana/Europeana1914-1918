<% provide :title, t('views.contributions.withdraw.title') %>

<p><%= raw t 'views.contributions.withdraw.question', :title => contribution_title(@contribution) %></p>

<%= semantic_form_for @contribution, :url => withdraw_contribution_path(@contribution), :html => { :method => :put } do |form| %>
  <%= form.buttons do %>
    <%= redirect_field %>
    <%= form.commit_button :label => t('formtastic.actions.contribution.withdraw') %>
    <%= form_cancel_link @contribution %>
  <% end %>
<% end %>

