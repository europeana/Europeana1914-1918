<% content_for :title, t('views.tags.delete.title') %>

<div class="section top">
  
  <h2><%= yield :title %></h2>
  
  <p><%= t 'views.tags.delete.question' %></p>

  <%= semantic_form_for @tag, :url => contribution_tag_path(@contribution, @tag.name), :html => { :method => :delete } do |form| %>
    <%= form.buttons do %>
      <%= redirect_field %>
      <%= form.commit_button :label => t('actions.delete') %>
      <%= form_cancel_link @contribution %>
    <% end %>
  <% end %>

</div>
