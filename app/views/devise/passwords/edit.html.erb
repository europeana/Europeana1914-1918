<% @title = t('views.devise.passwords.edit.title') %>

<%= render :partial => "devise/shared/links" %>

<%= semantic_form_for resource_name, resource, :url => password_path(resource_name), :html => { :method => :put, :class => 'devise' } do |form| -%>
  <%= form.inputs do %>
    <%= form.input :reset_password_token, :as => :hidden %>
    <%= form.input :password, :hint => '' %>
    <%= form.input :password_confirmation %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :label => t('formtastic.actions.password.update') %>
  <% end %>
<% end -%>
