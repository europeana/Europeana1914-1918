<% @title = t('views.devise.registrations.edit.title') %>

<% if @user.errors.present? %>
  <% flash.now[:alert] = t("flash.users.update.alert") %>
<% end %>

<%= semantic_form_for 'user', @user, :url => user_registration_path, :html => { :method => :put, :class => 'devise' } do |form| -%>
  <%= form.inputs :user_current_password do %>
    <%= form.input :current_password, :required => true %>
  <% end %>
  <%= form.inputs :user_registration do %>
    <%= form.input :email %>
    <%= form.input :password %>
    <%= form.input :password_confirmation %>
  <% end %>
  <%= form.buttons do %>
    <%= redirect_field %>
    <%= form.commit_button %>
    <%= form_cancel_link user_registration_path %>
  <% end %>
<% end -%>
